@model IEnumerable<Inventory.Models.SkincareProduct>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Product")
            </th>
            <th>
                @Html.Label("Brand")
            </th>
            <th>
                @Html.Label("Ounce")
            </th>
            <th>
                @Html.Label("Price")
            </th>
            <th>
                @Html.Label("Price per ounce")
            </th>
            <th>
                @Html.Label("Product Link")
            </th>
            <th>
                @Html.Label("Comments")
            </th>
            <th>
                @Html.Label("Date Purchased")
            </th>
            <th>
                @Html.Label("Category")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ounces)
            </td>
            <td>
                @string.Format("{0:C}", item.Price)
            </td>
            <td>
                @string.Format("{0:C}", item.PricePerOunce)
            </td>
            <td>
                @Html.Raw(item.ProductLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePurchased)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkincareCategoryNavigation.Category)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
